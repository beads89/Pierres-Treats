@{
  Layout = "_Layout";
}

@model Pierre.Models.Flavor

<h2>Add a treat</h2>

<h4>Add a treat to this flavor type:</h4>
<br>
<h4>@Html.DisplayFor(model => model.FlavorName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  <br>
  @Html.Label("Select treat: ")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" />
}
<div id="footer">
  <button  class="bottom btn btn-outline-dark">@Html.ActionLink("Back to list", "Index")</button>
</div>