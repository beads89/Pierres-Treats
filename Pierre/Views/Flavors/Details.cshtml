@{
  Layout = "_Layout";
}

@model Pierre.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>Category: @Html.DisplayFor(model => model.FlavorName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>No treats in stock with this flavor type. Check back soon!</p>
}
else
{
  <h4>We carry the following treats for @Html.DisplayNameFor(model => model.FlavorName)!</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@Html.ActionLink($"{join.Treat.TreatName}", "Details", "Treats", new { id = join.Treat.TreatId }, null)</li>
    @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<div id="footer">
  <button class="bottom btn btn-outline-dark">@Html.ActionLink("Back to list", "Index")</button>
  @if (User.Identity.IsAuthenticated)
  {
  <button class="bottom btn btn-outline-dark">@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId })</button>
  <button class="bottom btn btn-outline-dark">@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</button>
  <button class="bottom btn btn-outline-dark">@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</button>
  }
</div>