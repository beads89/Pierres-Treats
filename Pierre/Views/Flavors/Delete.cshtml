@{
  Layout = "_Layout";
}

@model Pierre.Models.Flavor

<h2>Are you sure you want to delete this flavor?</h2>

@Html.DisplayName("Flavor"): @Html.DisplayFor(model => model.FlavorName)
@using (Html.BeginForm())
{
  <input type="submit" value="Delete" />
}
<nav class="navbar fixed-bottom navbar-expand-xl navbar-dark bg-light"> 
  <button  class="btn btn-lg btn-outline-dark">@Html.ActionLink("Back to List", "Index")</button>
  @if (User.Identity.IsAuthenticated)
  {
    @using (Html.BeginForm("LogOff", "Account"))
    {
      <input type="submit" class="form-control ms-5 btn btn-lg btn-danger" value="Logout"/>
    }
  }
</nav>