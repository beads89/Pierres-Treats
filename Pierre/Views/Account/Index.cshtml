@{
  Layout = "_Layout";
}

@using Microsoft.AspNetCore.Mvc
@using System.Web
@using System.Security.Claims
@using Pierre.ViewModels
@model LoginViewModel

<h2>Account Page</h2>
<hr />

@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-danger" value="Log out" />
    }
}
else
{
    @using (Html.BeginForm())
    {
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { required = "required"})
        <br>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { required = "required"})
        @Html.ValidationSummary(true, "The username and/or password do not match. Please try again.")

        <br>
        <input type="submit" value="Login" class="btn btn-primary" />
    }
    <button class = "btn btn-warning">@Html.ActionLink("Register", "Register")</button>
}
<nav class="navbar fixed-bottom navbar-expand-xl navbar-dark bg-light">
<button class="btn btn-lg btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>
</nav>